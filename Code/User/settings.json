{
  "workbench.colorTheme": "Default High Contrast",
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
    "asvetliakov.vscode-neovim": 1
  },
  "vim.neovimPath": "/bin/nvim",
  "vim.enableNeovim": true,
  "search.collapseResults": "alwaysCollapse",
  // Editor settings
  "editor.minimap.enabled": false,
  "editor.fontFamily": "'Monaspace Neon', monospace",
  // For texture healing with monaspace
  "editor.fontLigatures": true,
  "editor.fontSize": 14.5,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "all",
  "editor.trimAutoWhitespace": true,
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "organizeImports": true
  },
  // Go settings
  "gopls": {
    "formatting.local": "github.com/censys"
  },
  "go.lintTool": "golint",
  "go.delveConfig": {},
  "go.toolsManagement.autoUpdate": true,
  "go.goroot": "/nix/store/hiqm2sg34wrjb7i9h8ac666vnd8aa5gh-go-1.20.8/share/go",
  // Debug settings
  "debug.openDebug": "openOnSessionStart",
  // language settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.maxTokenizationLineLength": 2500,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.bracketPairColorization.enabled": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.defaultInterpreterPath": "python3",
  "python.formatting.provider": "black",
  "[python]": {
    "editor.showUnused": true,
    // Turn this off, as it keeps removing imports.
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "haskell.manageHLS": "GHCup",
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "yaml": false,
    "dockerfile": true,
    "go": true,
    "json": true,
    "jsonc": true,
    "makefile": true,
    "shellscript": true,
    "sql": true,
    "typescript": true,
    "python": true
  },
  "github.copilot.advanced": {},
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "disabled",
    "vscode-kubernetes.helm-path.linux": "$HOME/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm"
  },
  "protoc": {
    "options": ["--proto_path=$HOME/dev/pipeline/proto"]
  },
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "editorWhitespace.foreground": "#555"
    }
  },
  "explorer.autoReveal": false,
  "window.menuBarVisibility": "compact"
  "window.density.editorTabHeight": "compact"
  // "workbench.editor": {
  //   "splitSizing": "auto"
  // },
  // "files": {
  //   "trimTrailingWhitespace": true,
  //   "dialog.defaultPath": "~/dev"
  // },
  // "workbench.experimental.settingsProfiles.enabled": true
}
