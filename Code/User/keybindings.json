// Place your key bindings in this file to override the defaults
// For all available commands, do:
//  [Ctrl+P] > Open Default Keyboard Shortcuts(JSON) _or_ [Ctrl+F1] as defined below.
[
  {
    "key": "ctrl+;",
    "command": "workbench.action.terminal.focus",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+;",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  { "key": "ctrl+w h", "command": "workbench.action.focusLeftGroup" },
  { "key": "ctrl+w j", "command": "workbench.action.focusBelowGroup" },
  { "key": "ctrl+w k", "command": "workbench.action.focusAbove" },
  { "key": "ctrl+w l", "command": "workbench.action.focusRightGroup" },
  { "key": "ctrl+w s", "command": "workbench.action.splitEditorRight" },
  { "key": "ctrl+w v", "command": "workbench.action.splitEditorDown" },
  {
    "key": "ctrl+w q",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "ctrl+w o",
    "command": "workbench.action.closeEditorsInOtherGroups"
  },
  { "key": "ctrl+w w", "command": "workbench.action.focusNextGroup" },
  { "key": "ctrl+w shift+w", "command": "workbench.action.focusPreviousGroup" },
  { "key": "ctrl+w t", "command": "workbench.action.focusFirstEditorGroup" },
  { "key": "ctrl+w b", "command": "workbench.action.focusLastEditorGroup" },
  {
    "key": "ctrl+w =",
    "command": "workbench.action.evenEditorWidths",
    "when": "editorTextFocus"
  },
  { "key": "ctrl+w r", "command": "workbench.action.moveEditorToNextGroup" },
  {
    "key": "ctrl+w shift+r",
    "command": "workbench.action.moveEditorToPreviousGroup"
  },
  { "key": "ctrl+w z", "command": "workbench.action.maximizeEditor" },
  { "key": "ctrl+w shift+,", "command": "workbench.action.decreaseViewWidth" },
  { "key": "ctrl+w shift+.", "command": "workbench.action.increaseViewWidth" },
  { "key": "ctrl+w -", "command": "workbench.action.decreaseViewHeight" },
  { "key": "ctrl+w shift+=", "command": "workbench.action.increaseViewHeight" },
  {
    "key": "ctrl+w ctrl+n",
    "command": "workbench.action.files.newUntitledFile"
  },
  // { "key": "ctrl+w p", "command": "last used editor group" },
  // {"key": "ctrl+w x", "command": "swap with next group" },
  // {"key": "ctrl+w n", "command": "New empty window?" },
  // { "key": "ctrl+w shift+k", "command": "current window to top full width" },
  // { "key": "ctrl+w shift+j", "command": "current window to bottom full width" },
  // { "key": "ctrl+w shift+h", "command": "current window to left full height" },
  // { "key": "ctrl+w shift+l", "command": "current window to right full height" },
  // { "key": "ctrl+w _", "command": "maximize current window height" },
  // { "key": "ctrl+w |", "command": "maximize current window width" },
  {
    "key": "ctrl+alt+down",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "q",
    "command": "editor.action.inlineSuggest.hide",
    "when": "inlineSuggestionVisible"
  },
  {
    "key": "ctrl+shift+j",
    "command": "editor.action.joinLines",
    "when": "editorFocus && editorHasSelection"
  },
  {
    "key": "ctrl+f1",
    "command": "workbench.action.openDefaultKeybindingsFile"
  }
]
