// Place your key bindings in this file to override the defaults
// For all available commands, do:
//  [Ctrl+P] > Open Default Keyboard Shortcuts(JSON) _or_ [Ctrl+F1] as defined below.
[
  {
    "key": "ctrl+;",
    "command": "workbench.action.terminal.focus",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+;",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  { "key": "ctrl+h", "command": "workbench.action.focusPreviousGroup" },
  { "key": "ctrl+l", "command": "workbench.action.focusNextGroup" },
  { "key": "ctrl+w 3", "command": "workbench.action.splitEditor" },
  {
    "key": "ctrl+w 0",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "q",
    "command": "editor.action.inlineSuggest.hide",
    "when": "inlineSuggestionVisible"
  },
  {
    "key": "ctrl+shift+j",
    "command": "editor.action.joinLines",
    "when": "editorFocus && editorHasSelection"
  }, 
  {
    "key": "ctrl+f1",
    "command": "workbench.action.openDefaultKeybindingsFile"
  },
  {
    "key": "ctrl+shift+n",
    "command": "workbench.action.files.newUntitledFile"
  }
]
